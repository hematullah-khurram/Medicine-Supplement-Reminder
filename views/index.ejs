<section class="grid gap-6">
  <% if (!currentUser) { %>
    <div class="rounded-2xl p-8 bg-white/70 shadow ring-1 ring-brand-100">
      <h1 class="text-3xl font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-brand-700 to-mint-700">
        Welcome to Med Reminder
      </h1>
      <p class="mt-2 text-slate-600">Create an account to manage your medicine & supplement schedule with ease.</p>
      <div class="mt-5 flex gap-3">
        <a href="/register" class="px-5 py-3 rounded-xl bg-brand-600 text-white font-semibold hover:bg-brand-700">Get Started</a>
        <a href="/login" class="px-5 py-3 rounded-xl bg-white ring-1 ring-slate-200 text-slate-700 hover:bg-slate-50">Login</a>
      </div>
    </div>
  <% } else { %>
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
      <h1 class="text-2xl font-bold">Your Reminders</h1>
      <div class="flex gap-2">
        <a href="/reminders" class="px-4 py-2 rounded-lg bg-white ring-1 ring-slate-200 hover:bg-slate-50">All Reminders</a>
        <a href="/reminders/new" class="px-4 py-2 rounded-lg bg-brand-600 text-white hover:bg-brand-700 font-semibold">Add Reminder</a>
      </div>
    </div>

    <% if (reminders && reminders.length) { %>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5 mt-4">
        <% reminders.forEach(r => { %>
          <a href="/reminders/<%= r._id %>" class="block rounded-2xl bg-white shadow p-5 ring-1 ring-brand-100 hover:shadow-lg transition">
            <div class="flex items-start justify-between">
              <h3 class="text-lg font-semibold"><%= r.name %></h3>
              <span class="text-xs px-2 py-1 rounded-full bg-mint-100 text-mint-800 capitalize"><%= r.category %></span>
            </div>
            <p class="mt-1 text-sm text-slate-600"><strong>Dosage:</strong> <%= r.dosage %></p>
            <p class="text-sm text-slate-600"><strong>Time:</strong> <%= r.time || 'â€”' %></p>
            <p class="text-sm text-slate-600"><strong>Frequency:</strong> <%= r.frequency %></p>
          </a>
        <% }) %>
      </div>
    <% } else { %>
      <div class="rounded-2xl p-8 bg-white/70 shadow ring-1 ring-brand-100 mt-4">
        <p class="text-slate-600">No reminders yet. Click <span class="font-semibold">Add Reminder</span> to create your first one.</p>
      </div>
    <% } %>
  <% } %>
</section>
