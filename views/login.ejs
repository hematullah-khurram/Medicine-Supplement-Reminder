<section class="max-w-xl mx-auto">
  <h1 class="text-2xl font-bold mb-4">Login</h1>
  <form action="/login" method="POST" class="grid gap-4 bg-white rounded-2xl p-6 shadow ring-1 ring-brand-100">
    <label class="grid gap-1">
      <span class="text-sm font-semibold">Email</span>
      <input name="email" type="email" required class="input" />
    </label>
    <label class="grid gap-1">
      <span class="text-sm font-semibold">Password</span>
      <input name="password" type="password" required class="input" />
    </label>
    <div class="flex gap-3 justify-end">
      <a href="/" class="btn-secondary">Cancel</a>
      <button class="btn-primary">Login</button>
    </div>
  </form>
</section>
