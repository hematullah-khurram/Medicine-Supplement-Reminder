<div class="grid lg:grid-cols-3 gap-6">
  <div class="lg:col-span-2 rounded-2xl bg-white shadow ring-1 ring-brand-100 p-6">
    <div class="flex items-start justify-between">
      <h1 class="text-2xl font-bold"><%= reminder.name %></h1>
      <span class="px-3 py-1 text-xs font-semibold text-green-800 bg-green-100 rounded-full">
  Medicine
</span>

    </div>
    <div class="mt-4 grid sm:grid-cols-3 gap-4 text-sm">
      <div class="p-4 rounded-xl bg-brand-50 ring-1 ring-brand-100">
        <div class="text-slate-500">Dosage</div>
        <div class="font-semibold"><%= reminder.dosage %></div>
      </div>
      <div class="p-4 rounded-xl bg-brand-50 ring-1 ring-brand-100">
        <div class="text-slate-500">Time</div>
        <div class="font-semibold"><%= reminder.time || '—' %></div>
      </div>
      <div class="p-4 rounded-xl bg-brand-50 ring-1 ring-brand-100">
        <div class="text-slate-500">Frequency</div>
        <div class="font-semibold"><%= reminder.frequency %></div>
      </div>
    </div>
    <div class="mt-6">
      <h2 class="text-sm font-semibold text-slate-500">Description</h2>
      <p class="mt-1 text-slate-700"><%= reminder.description || 'No description provided' %></p>
    </div>
  </div>

  <div class="rounded-2xl bg-white shadow ring-1 ring-brand-100 p-6 h-fit">
    <div class="text-sm text-slate-500">Created by</div>
    <div class="font-semibold">
      <%= reminder.createdBy.username.charAt(0).toUpperCase() + reminder.createdBy.username.slice(1) %>
    </div>
    <div class="mt-4 flex gap-3">
      <% if (currentUser && currentUser.id == reminder.createdBy._id.toString()) { %>
        <a class="btn-secondary" href="/reminders/<%= reminder._id %>/edit">Edit</a>
        <form action="/reminders/<%= reminder._id %>?_method=DELETE" method="POST">
          <button class="btn-danger">Delete</button>
        </form>
      <% } %>
    </div>
    <a href="/reminders" class="btn-link mt-4 inline-block">← Back to list</a>
  </div>
</div>
